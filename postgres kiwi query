--login kiwi Db for user postgres to terminal
    sudo -u postgres psql kiwi

--create Db on command line
    createdb -h localhost -p 5432 -U postgres kiwi4.1.4
    password : root

--Table detail
    \d table

--insert into table
insert into public.classifications (id , name , description , sortkey)
        values (3,'Platform Category','Plivo platform category',2);

--update into table
update public.products set classification_id = 2 where id = 2;

--insert a PLAN
insert into public.test_plans (plan_id, name, creation_date, isactive, author_id, product_id, product_version_id, type_id )
            values (2, 'Test', current_timestamp, 't', 1, 2, 2, 2);

--insert new status for test case
insert into public.test_case_run_status ( case_run_status_id ,  name   , sortkey ,  auto_blinddown  )
            values ( 9 , 'Plivo', 9 , 't');

--get max id from test cases
select max(case_id) from public.test_cases;

--insert new test case
insert into public.test_cases
        values(default, current_timestamp , 0, 'f' , NULL, NULL, NULL,
        'DummyTestCase1', NULL, '', NULL, 1, 2, 1, NULL, 1, NULL, '00:00:00');
--get prod id by name
select id from public.products where upper(name) = 'SMS';

--delete test cases
delete from public.test_cases where case_id >= 4;


