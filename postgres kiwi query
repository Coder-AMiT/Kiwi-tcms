-- ======== Create new plan and add cases n make it run =======

-- create new test plan in table
    select * from test_plans;
-- insert the test cases in the new plan
    insert into test_case_plans values(4, 1, 3, 2);
-- create a new test run in this table and give the plan id from above
    select * from test_runs;
-- add the test case to  case_run id with status either passed,failed, etc
    insert into test_case_runs values(5, 1, NULL, current_timestamp, 'demo runner', 3, 0, 1, 1, 1, 1, 3, 1);

